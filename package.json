{
  "name": "Letterly",
  "version": "1.0.0",
  "description": "Letterly - A Node.js email sender application with React frontend and TypeScript backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run server:dev",
    "server:dev": "nodemon --exec ts-node src/server.ts",
    "server:build": "npm install && tsc",
    "server:start": "node dist/server.js",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm install && npm run build",
    "install:all": "npm install && cd client && npm install",
    "build": "npm run server:build && npm run client:build",
    "start": "node dist/server.js"
  },
  "keywords": [
    "email",
    "nodemailer",
    "react",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.27.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.10.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^10.2.1",
    "googleapis": "^156.0.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.18.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
